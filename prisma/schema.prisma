// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("RAW_DATABASE_URL")
}

enum UserRole {
  ADMIN
  ORG_USER
}

enum CallStatus {
  INITIATED
  IN_PROGRESS
  COMPLETED
  FAILED
  NO_ANSWER
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  description String?
  n8nWebhookUrl String? // Webhook URL for initiating calls for this org
  retellApiKey  String? // Organization-specific Retell API key if needed
  defaultFromNumber String? // Default phone number to make calls from
  customFieldDefinitions Json? // Schema for custom fields: [{ key: "first_offer", label: "First Offer" }]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  calls       Call[]
  contacts    Contact[]
  agents      Agent[] // Retell AI agents assigned to this org
  scheduledCalls ScheduledCall[]
  emailSettings EmailSettings?
  
  @@map("organizations")
}

// Enum for email notification triggers
enum EmailNotificationTrigger {
  INBOUND_ONLY    // Send emails only for inbound calls
  OUTBOUND_ONLY   // Send emails only for outbound calls
  BOTH            // Send emails for both inbound and outbound calls
}

// Email/SMTP settings per organization
model EmailSettings {
  id              String   @id @default(cuid())
  organizationId  String   @unique
  
  // SMTP Configuration
  smtpHost        String   // e.g., smtp.gmail.com
  smtpPort        Int      @default(587) // Common ports: 25, 465, 587
  smtpSecure      Boolean  @default(false) // true for 465, false for other ports
  smtpUser        String   // SMTP username/email
  smtpPassword    String   // SMTP password (should be encrypted in production)
  
  // Email settings
  fromEmail       String   // Sender email address
  fromName        String?  // Sender display name
  toEmails        String[] // Recipient email addresses
  
  // Notification triggers
  notificationTrigger EmailNotificationTrigger @default(BOTH)
  
  // Feature flags
  isEnabled       Boolean  @default(true) // Enable/disable email notifications
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
  @@map("email_settings")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String   // Hashed password
  role          UserRole @default(ORG_USER)
  organizationId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  organization  Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([email])
  @@index([organizationId])
  @@map("users")
}

model Contact {
  id             String   @id @default(cuid())
  name           String
  phoneNumber    String
  email          String?
  businessName   String?
  businessWebsite String?
  notes          String?
  customFields   Json?    // Flexible key-value pairs for additional contact information
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  calls          Call[]
  scheduledCalls ScheduledCall[]
  
  @@index([organizationId])
  @@index([phoneNumber])
  @@map("contacts")
}

model Agent {
  id             String   @id @default(cuid())
  retellAgentId  String   @unique // agent_id from Retell AI
  name           String
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  calls          Call[]
  
  @@index([organizationId])
  @@index([retellAgentId])
  @@map("agents")
}

model Call {
  id              String     @id @default(cuid())
  contactId       String?    // Optional - can be null for webhook calls
  organizationId  String
  agentId         String?    // Agent that handled the call
  retellCallId    String?    @unique // ID from Retell AI
  callType        String?    // web_call, phone_call, etc.
  status          CallStatus @default(INITIATED)
  duration        Int?       // Duration in seconds
  startedAt       DateTime?
  endedAt         DateTime?
  disconnectionReason String? // user_hangup, agent_hangup, etc.
  fromNumber      String?    // Phone number that initiated the call
  toNumber        String?    // Phone number that received the call
  direction       String?    // inbound or outbound
  clientPhoneNumber String?  // The client's phone number (from_number if inbound, to_number if outbound)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  contact         Contact?      @relation(fields: [contactId], references: [id], onDelete: Cascade)
  organization    Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agent           Agent?        @relation(fields: [agentId], references: [id], onDelete: SetNull)
  summary         CallSummary?
  recording       CallRecording?
  
  @@index([organizationId])
  @@index([contactId])
  @@index([agentId])
  @@index([retellCallId])
  @@index([status])
  @@index([createdAt])
  @@map("calls")
}

model CallSummary {
  id              String   @id @default(cuid())
  callId          String   @unique
  transcript      String?  @db.Text
  summary         String?  @db.Text
  sentiment       String?  // positive, negative, neutral
  keyPoints       String[] // Array of key discussion points
  actionItems     String[] // Array of action items
  metadata        Json?    // Additional metadata from Retell AI
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  call            Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  
  @@index([callId])
  @@map("call_summaries")
}

model CallRecording {
  id              String   @id @default(cuid())
  callId          String   @unique
  recordingUrl    String   // URL from Retell AI
  cloudflareR2Url String?  // URL after uploading to Cloudflare R2
  duration        Int?     // Duration in seconds
  fileSize        Int?     // File size in bytes
  format          String?  // Audio format (mp3, wav, etc.)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  call            Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  
  @@index([callId])
  @@map("call_recordings")
}

enum ScheduledCallStatus {
  PENDING      // Waiting to be executed
  IN_PROGRESS  // Currently being processed
  COMPLETED    // Successfully completed
  FAILED       // Failed to execute
  CANCELLED    // Manually cancelled
}

model ScheduledCall {
  id             String              @id @default(cuid())
  contactId      String
  organizationId String
  fromNumber     String              // Number to call from
  agentId        String              // Agent ID to use for the call
  batchId        String?             // ID to group calls in a batch
  scheduledTime  DateTime            // When to place the call
  status         ScheduledCallStatus @default(PENDING)
  retellCallId   String?             // ID from Retell once call is placed
  callId         String?             // Reference to Call model once created
  dynamicVariables Json?             // Custom variables for this call
  errorMessage   String?             // Error message if failed
  attempts       Int                 @default(0) // Number of attempts made
  maxAttempts    Int                 @default(3) // Maximum retry attempts
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  executedAt     DateTime?           // When the call was actually placed
  
  contact        Contact             @relation(fields: [contactId], references: [id], onDelete: Cascade)
  organization   Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
  @@index([contactId])
  @@index([scheduledTime])
  @@index([status])
  @@map("scheduled_calls")
}
